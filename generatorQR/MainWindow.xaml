<Window x:Class="generatorQR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:generatorQR"
        mc:Ignorable="d"
        Title="Generátor QR kódů" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnPotvrzeni" BorderThickness="2,2,2,2" Content="Vytvořit QR" HorizontalAlignment="Center" Margin="0,378,0,10" Padding ="10, 10, 10, 10" VerticalAlignment="Center" Width="340" Height="46" Background="White" BorderBrush="#FFCE00FF" FontSize="16" FontFamily="Cambria Math" FontWeight="Bold" Click="btnPotvrzeni_Click"/>
        <TextBox x:Name="textboxInput" HorizontalAlignment="Center" Margin="0,336,0, 20" TextWrapping="Wrap" Text="Zadej text" VerticalAlignment="Top" Width="340" Height="42" FontSize="18" MouseEnter="textboxInput_MouseEnter"/>
        <Image x:Name="obrazekQR" HorizontalAlignment="Left" Height="300" Margin="244,10,0,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</Window>
